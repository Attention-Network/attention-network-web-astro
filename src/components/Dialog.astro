---
const { id } = Astro.props;
---

<div>
	<slot name='open-dialog' />
	<dialog id={id}>
		<slot name='close-dialog' />
		<slot />
	</dialog>
</div>

<style lang='scss'>
	dialog {
		position: fixed;
		background-color: white;
		width: 100%;
		height: 100%;
		margin: 0;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		border: none;
		padding: 0;
	}

	.dialog-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		#dialog-title {
			font-family: 'Futura light';
			color: black;
		}
	}
</style>

