---
import type { HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon";

type Props = HTMLAttributes<"a"> & { more: String };;

const { href, more, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
{more ? (
  <input type="checkbox" id="toggle" />
  <label for="toggle" class="button"><Icon name="ph:caret-down"/></label>
  <div class="menu">
    <ul>
      <li><a href="/community">Personal finance 101</a></li>
      <li><a href="/tool/inflation">Inflation calculator</a></li>
    </ul>
  </div>
) : <></>}
<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    /* font-weight: bolder; */
    text-decoration: underline;
  }
  .button {
    background-color: white;
  }
  .button svg {
      width: 10px;
    }
  ul, li {
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-right: 20px;
  }
  .menu {
    opacity: 0;
    position: absolute;
    top: 50;
    width: 100%;
    left: 0;
    height: auto;
    background: white;
    z-index: 3;
    transition: all 0.7s ease;
  }
  .menu a {
    color: var(--black);
  }
  .menu a:hover {
    color: var(--accent);
    cursor: pointer;
  }
  #toggle {
    /* visibility: hidden; */
    display: none;
  }
  
  #toggle:checked + .button  svg {
    transform: rotate(180deg);
    /* background: transparent; */
    transition: all 0.4s ease;
  }

  #toggle:checked + .button + .menu {
      /* top: 50px; */
      display: block;
      /* top: 60px; */
      /* transform: translateY(60px); */
      left: 0;
      opacity: 1;
      transition: all 0.4s ease;
  }
</style>
